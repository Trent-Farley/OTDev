@model SearchClimbers

@{
    ViewData["Title"] = "Climber";
}
<div class="form-check-inline" style="background-color:aliceblue">
    <h3 class="card-header">Add A Climber:</h3>
    <div class="card-body">
        <form asp-controller="HomeController" asp-action="Climber" method=post>
            <div class="form-group">
                <label>
                    Name
                    <input asp-for="Name" class="form-control">
                </label>
                <label>
                    Age
                    <input asp-for="Age" class="form-control">
                </label>
            </div>
            <button class="btn btn-outline-primary" type="submit" asp-action="Climber"> Add </button>
        </form>
    </div>
</div>
<div class="form-check-inline" style="background-color:aliceblue">
    <h3 class="card-header">Find A Climber:</h3>
    <form asp-controller="Home" asp-action="SearchClimber" method=get>
        <div class="card-body">
            <label> Search  </label>
            <input asp-for="Name" required>  </input>
            <button type="submit"> Search </button>
        </div>
    </form>
</div>
@if (Model != null)
{
    <div class="text-center p-2">
        <table class="table table-bordered table-striped table-sm table-dark">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ClimberList)
                {
                    <tr>
                        <td> @item.Name </td>
                        <td> @item.Age </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}