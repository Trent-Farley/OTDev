<div class="container">
    <div class="jumbotron shadow-lg">
        <h3 class="text-center">Search by Recipe Name or Ingredient!</h3>
        <div class="input-group">
            <select id="searchType" class="form-control">
                <option value="Recipe">Recipe Name</option>
                <option value="Ingredient">Ingredient</option>
            </select>
            <input id="sbn" type="text" class="form-control" placeholder="Hot Chili" aria-label="Search for recipes by name">
            <div class="input-group-append">
                <button class="btn btn-success" onclick="searchByName()" type="button">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
            </div>
        </div>
    </div>
    <div id="main" class="card-columns"></div>
</div>

