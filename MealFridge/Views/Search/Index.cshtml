@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> signInManager;

<div class="container">
    <h3 class="text-center">Search by Recipe Name or Ingredient!</h3>
    <div class="jumbotron p-0 h-25  shadow-lg">
        <div class="collapse" id="shoppingList" style="background-color:whitesmoke">
            <button id="print-list-button" class="btn btn-outline-info"><i class="fa fa-print"></i></button>
            <div id="innerShopping">
                <h3 id="shoppingListTitle" class="text-center">Shopping List</h3>
                <table id="shoppingListTable" class="table table-responsive-sm">
                </table>
            </div>
        </div>
        <div class="input-group">

            <div class="input-group-prepend">
                <button class="float-left btn btn-outline-success " type="button" data-toggle="collapse" data-target="#shoppingList" aria-expanded="false" aria-controls="shoppingList" title="Open or close the shopping list">
                    <i class="fa fa-shopping-cart"></i>
                </button>
                @if (signInManager.IsSignedIn(User))
                {
                    <button id="SearchInventory" class="float-right btn btn-outline-success" type="button" title="Find recipes based on ingredients in your fridge" onclick="inventorySearch()">
                        <i class="fas fa-box"></i>
                    </button>
                }
                <input id="inventorySearch" value="@Model" hidden />
                <select id="searchType" class=" w-auto custom-select bg-primary text-light">
                    <option value="Recipe">Recipe Name</option>
                    <option value="Ingredient">Ingredient</option>
                </select>
            </div>
            <input id="sbn" type="text" required class="w-auto form-control" placeholder="Recipe name or ingredient" aria-label="Search for recipes by name">
            <div class="input-group-append">
                <button class="btn btn-success" title="search for recipes" onclick="searchByName()" type="button">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
            </div>
        </div>
    </div>
    <div id="spinner"></div>
    <div id="main" class="card-columns"></div>
    <div id="modal-container"></div>
</div>
@section Scripts{
    <script src="~/js/Search/Index.js"></script>
    <script src="~/js/Search/RecipeDetails.js"></script>
}