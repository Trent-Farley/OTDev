@{ ViewBag.Title = "DietaryRestriction"; }
@model DietaryRestrictions
<div class="navbar navbar-expand-md d-flex" style="background-color:azure">
    <ul class="nav nav-tabs justify-content-center">
        <li class="nav-item">
            <a class="active nav-link" style="color:black" asp-area="" asp-controller="AccountManagement" asp-action="DietaryRestrictions">Dietary Restrictions</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" style="color:black" asp-area="" asp-controller="AccountManagement" asp-action="FavoriteRecipes">Favorited/Shelved Recipes</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" style="color:black" asp-area="" asp-controller="AccountManagement" asp-action="FoodPreferences">Food Preferences</a>
        </li>
    </ul>
</div>
<p> </p>
<div class="container">
    <div class="row">
        <div class="col" style="box-shadow:10px 10px 5px grey;">
            <div class="container" style="background-color:white;">
                <h1>Diet Settings</h1>
                <ul>
                    <li>
                        <input type="checkbox" checked="@Model.Diet.Whole30.Value" id="Whole30">
                        <label> Whole30 </label>
                    </li>
                    <li>
                        <input type="checkbox" checked="@Model.Diet.DairyFree.Value" id="DairyFree">
                        <label> DairyFree </label>
                    </li>
                    <li>
                        <input type="checkbox" checked="@Model.Diet.GlutenFree.Value" id="GlutenFree">
                        <label> Gluten Free </label>
                    </li>
                    <li>
                        <input type="checkbox" checked="@Model.Diet.Keto.Value" id="Keto">
                        <label> Keto </label>
                    </li>
                    <li>
                        <input type="checkbox" checked="@Model.Diet.Vegan.Value" id="Vegan">
                        <label> Vegan </label>
                    </li>
                    <li>
                        <input type="checkbox" checked="@Model.Diet.Vegetarian.Value" id="Vegetarian">
                        <label> Vegetarian </label>
                    </li>
                    <li>
                        <input type="checkbox" checked="@Model.Diet.LactoVeg.Value" id="LactoVeg">
                        <label> Lacto Vegetarian </label>
                    </li>
                    <li>
                        <input type="checkbox" checked="@Model.Diet.OvoVeg.Value" id="OvoVeg">
                        <label> Ovo Vegetarian </label>
                    </li>
                    <li>
                        <input type="checkbox" checked="@Model.Diet.Paleo.Value" id="Paleo">
                        <label> Paleo </label>
                    </li>
                    <li>
                        <input type="checkbox" checked="@Model.Diet.Pescetarian.Value" id="Pescetarian">
                        <label> Pescetarian </label>
                    </li>
                    <li>
                        <input type="checkbox" checked="@Model.Diet.Primal.Value" id="Primal">
                        <label> Primal </label>
                    </li>
                    <li>
                        <input type="checkbox" checked="@Model.Diet.Metric.Value" id="Metric">
                        <label> Default to Metric Measurements </label>
                    </li>
                </ul>
                <button type="button" title="Update Diet Settings" class="btn btn-primary" onclick="updateDiet()" id="dietUpdateButton">Update</button>
            </div>
        </div>
        <div class="col" style="box-shadow:10px 10px 5px grey;">
            <div class="container" style="background-color:white;">
                <h1>Restricted Ingredients</h1>
                @if (Model.userRestrictions.Count() > 0)
                {
                    <table class="table table-bordered table-striped table-sm">
                        <thead>
                            <tr>
                                <th> Ingredients Flagged as "Cannot Have" </th>
                            </tr>
                        </thead>

                        @foreach (var i in Model.userRestrictions)
                        {
                            <tbody>
                                <tr>
                                    <td> @i.Ingred.Name </td>
                                    <td>
                                        <button type="button" title="Remove from list" class="cnhIngredButton" id="btn-@i.IngredId" onclick="removeRestrictedIngredient(@i.IngredId)">
                                            <i class="far fa-times-circle"></i>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    </table>
                }
                @if (Model.userRestrictions.Count() < 1)
                {
                    <p>--Nothing to show--</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="fixed-bottom d-flex justify-content-center w-50 " id="alert"></div>
@section Scripts{
    <script src="~/js/Preferences/Index.js"></script>
}